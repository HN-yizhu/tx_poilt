<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="/data/home/txpoilt/logs" />
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%X{sessionId} %d{yyyy-MM-dd HH:mm:ss.SSS} [%p][%c][%M][%L]->%n%m%n</pattern>
        </encoder>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- 当前log文件 -->
        <file>${LOG_HOME}/tx-poilt.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/tx-poilt-%d{yyyy-MM-dd}.%i.log</FileNamePattern>
            <MaxFileSize>50MB</MaxFileSize>
            <!--日志文件保留天数-->
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%X{sessionId} %d{yyyy-MM-dd HH:mm:ss.SSS} [%p][%c][%M][%L]->%n%m%n</pattern>
        </encoder>
    </appender>
    <!-- 异步写日志 -->
    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<!-- 不丢失日志，默认队列的80%已满，则会丢弃TRACE、DEBUG、INFO级别的日志 -->
		<discardingThreshold>0</discardingThreshold>
		<!-- 队列深度，默认256 -->
		<queueSize>512</queueSize>
		<!-- 添加附加的appender，只能加一个 -->
		<appender-ref ref="FILE"/>
	</appender>
    <!-- 
	<logger name="org.springframework.cloud.sleuth" level="DEBUG" />
	 -->
	<!-- 日志输出级别 -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</root>
	
</configuration>